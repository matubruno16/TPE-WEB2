<div class="md-container mx-auto ">
    <h1 class="text-center">Agregar marca</h1>

    <form action="addMarca" method="POST" enctype="multipart/form-data" class="my-4 col-12 col-md-8 col-lg-4 mx-auto">
        <div class="row m-4">
            <div class="col-12">
                <div class="form-group">
                    <label>Agregar marca</label>
                    <input name="nombre" type="text" class="form-control">
                </div>
            </div>
        </div>
        <div class="row m-4">
            <div class="col-12">
                <div class="form-group">
                    <label>Imagen (URL)</label>
                    <input name="imagen" type="file" class="form-control" id="imagen" accept="image/*">
                </div>
            </div>
        </div>

        <div class="row m-4 d-flex justify-content-center">
            <div class="col-4">
                <button type="submit" class="btn btn-primary mt-4">Guardar</button>
            </div>
        </div>
    </form>
</div>